{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["frontend/src/*"]
    },
    "types": ["vite/client"]
  },
  "include": [
    "frontend/src/**/*.ts",
    "frontend/src/**/*.tsx",
    "frontend/src/**/*.vue"
  ],
  "exclude": [
    "frontend/dist",
    "node_modules"
  ]
}
